<Configuration status="INFO">
    <Appenders>
        <RollingFile name="FileAppender" filePattern="logs/app-%d{yyyy-MM-dd}.log">
            <fileName>logs/app-${date:yyyy-MM-dd_HH-mm-ss}.log</fileName>
            <PatternLayout>
                <Pattern>%d [%t] %-5level %logger - %msg%n</Pattern>
            </PatternLayout>
            <Policies>
                <TimeBasedTriggeringPolicy />
            </Policies>
        </RollingFile>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss.SSS} [%t] %-5level %logger - %msg%n"/>
        </Console>
    </Appenders>
    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileAppender"/>
        </Root>
    </Loggers>
</Configuration>